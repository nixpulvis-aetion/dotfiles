#!/bin/bash

# Left click
if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
  sudo light -A 10
# Right click
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
  sudo light -U 10
fi

URGENT_VALUE=10

curBrightness=$(light)
if (( $(echo "${curBrightness} < 0.0" | bc -l) )); then
  exit
fi

percent=$(echo "scale=0;${curBrightness}" | bc -l)
percent=${percent%.*}
if [[ "${percent}" -le 0 ]]; then
  exit
fi

echo "${percent}%"
echo "${percent}%"
# echo ""

if [[ "${percent}" -le "${URGENT_VALUE}" ]]; then
  exit 33
fi

