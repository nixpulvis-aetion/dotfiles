#!/bin/sh

step=10
case $BLOCK_BUTTON in
  1) brightnessctl set -q "80%" ;;
  3) brightnessctl set -q "20%" ;;
  4) brightnessctl set -q "+$step" ;;
  5) brightnessctl set -q "-$step" ;;
esac

URGENT_VALUE=10

max=$(brightnessctl max)
get=$(brightnessctl get)

percent=$(echo "scale=1; ($get/$max*100)" | bc)
percent=$(echo ${percent%.*})

# TODO: Used to simply not print anything.
# if [[ "${percent}" -le 0 ]]; then
#   echo -n "\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t"
#   echo -n "BRIGHTNESS OFF"
#   echo    "\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t"
#   echo    "\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t"
#   echo "#FE340A"
#   echo "#FE340A"
#   exit
# fi

echo "${percent}%"
echo "${percent}%"
# echo ""

if [[ "${percent}" -le "${URGENT_VALUE}" ]]; then
  exit 33
fi

