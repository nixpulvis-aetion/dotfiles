[user]
	name = Nathan Lilienthal
	email = nathan.lilienthal@aetion.com

[alias]
	a = add
	b = branch
	c = clean
	d = diff
	f = fetch
	g = clone
	h = show
	i = commit
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	m = merge
	n = init
	o = remote
	p = push
	r = rebase
	s = status -s
	t = tag
	u = reset
	v = pull
	x = checkout
	z = stash

	up = !git remote update -p; git merge --ff-only @{u}
 	cp = cherry-pick
 	dt = difftool
 	mt = mergetool

[init]
	defaultBranch = master

[branch]
	autosetuprebase = always

[push]
	default = matching

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[core]
	excludesfile = ~/.gitignore
